#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    string SortVow(string s) {
        vector<char> vowels;
        for (char c : s) {
            if (c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||c=='A'||c=='E'||c=='I'||c=='O'||c=='U') {                        //if vowels, first add in a vector
                vowels.push_back(c);
            }
        }
        sort(vowels.begin(), vowels.end());                                                                            //sort according to ASCII

        int j = 0;
        while (i<s.size() && j<vowels.size()) {
            if (c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||c=='A'||c=='E'||c=='I'||c=='O'||c=='U') {
                s[i] = vowels[j++];
            }
        }
        return s;
    }
};

int main() {
    Solution sol;
    string s;
    cout << "Enter a string: ";
    cin >> s;

    string result = sol.SortVow(s);
    cout << "Result: " << result << endl;

    return 0;
}
