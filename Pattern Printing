#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int size = 2 * n - 1;

    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            // Find distance from all 4 sides
            int top = i;
            int left = j;
            int right = size - 1 - j;
            int bottom = size - 1 - i;

            // Find the smallest distance from an edge
            int min = top;
            if (left < min) min = left;
            if (right < min) min = right;
            if (bottom < min) min = bottom;

            // Print the number for this position
            printf("%d ", n - min);
        }
        printf("\n"); // Move to next row
    }

    return 0;
}
