#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        if (nums.empty()) return 0;
        int j = 1; // j points to the next position for unique elements
        for (int i = 1; i < nums.size(); i++) {
            if (nums[i] != nums[j-1]) {
                nums[j] = nums[i]; // place unique element at position j
                j++;
            }
        }
        return j; // new length
    }
};

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> num(n);
    cout << "Enter sorted digits: ";
    for (int i = 0; i < n; i++) {
        cin >> num[i];
    }

    Solution sol;
    int newLength = sol.removeDuplicates(num);

    cout << "New length: " << newLength << endl;
    cout << "Array after removing duplicates: ";
    for (int i = 0; i < newLength; i++) {
        cout << num[i] << " ";
    }
    cout << endl;

    return 0;
}
