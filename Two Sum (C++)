#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        for (int i = 0; i < nums.size(); i++) {                               //starts with first numbers and add with all other elements to its right
            for (int j = i + 1; j < nums.size(); j++) {                      //starts after the i element to avoid self-pairing(eg: 1+1) and duplicates(eg:(2,7) & (7,2) gives same result)
                if (nums[i] + nums[j] == target) {
                    return {i, j};                                           // return a vector of indices
                }
            }
        }
        return {};                                                          // empty vector if no pair found
    }
};

int main() {
    Solution sol;
    int n, target;

    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> nums(n);
    cout << "Enter the elements: ";
    for (int i = 0; i < n; i++) {
        cin >> nums[i];
    }

    cout << "Enter target: ";
    cin >> target;

    vector<int> result = sol.twoSum(nums, target);

    if (!result.empty()) {
        cout << "Indices: " << result[0] << ", " << result[1] << endl;
        cout << "Numbers: " << nums[result[0]] << ", " << nums[result[1]] << endl;
    } else {
        cout << "No pair found!" << endl;
    }

    return 0;
}
