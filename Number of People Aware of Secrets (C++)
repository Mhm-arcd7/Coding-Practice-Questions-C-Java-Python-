#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int mod = (long)(1000000007);
    int PplAware(int n, int delay, int forget) {
        long PplWithSec = 0;                                //active sharers
        vector<long> dp(n+1, 0);                            //vector to store newjoiners per day
        dp[1] = 1;                                          //1st day 1 person learns, not share

        for (int i = 2; i <= n; i++) {                      //since 1st day alrdy set, start with 2nd
            long NewPplLearnt = 0;
            if ((i - delay) >= 1) {                        //after delay days, people can share
                NewPplLearnt = dp[i - delay];
            }

            long PplForget = 0;
            if ((i - forget) >= 1) {                      //person forgets and stop share
                PplForget = dp[i - forget];
            }

            PplWithSec = (PplWithSec + NewPplLearnt - PplForget + mod) % mod;                     
            dp[i] = PplWithSec;
        }

        long ans = 0;
        for (int i = n - forget + 1; i <= n; i++) {                          //people who didnt forget yet and remembers the secret
            if (i >= 1) ans = (ans + dp[i]) % mod;
        }

        return (int)ans;
    }
};

int main() {
    Solution sol;

    int n, delay, forget;
    cout << "Enter n, delay, forget: ";
    cin >> n >> delay >> forget;

    cout << "People aware of the secret after " << n 
         << " days: " << sol.PplAware(n, delay, forget) << endl;

    return 0;
}
