#include <bits/stdc++.h>
using namespace std;

int MaxProfit(vector<int>& price) {
    int minPrice = INT_MAX; // start with largest possible number
    int maxProf = 0;        // start with 0 profit
    
    for (int p : price) {
        if (p < minPrice) {
            minPrice = p;   // update minimum price
        }
        else if (p - minPrice > maxProf) {
            maxProf = p - minPrice; // update max profit
        }
    }
    return maxProf;
}

int main() {
    int n;
    cout << "Enter the number of days: ";
    cin >> n;

    vector<int> price(n);
    cout << "Enter stock prices: ";
    for (int i = 0; i < n; i++) {
        cin >> price[i];
    }

    cout << "Maximum Profit: " << MaxProfit(price) << endl;
    return 0;
}
